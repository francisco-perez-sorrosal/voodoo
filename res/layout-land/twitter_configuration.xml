<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
  android:background="@color/background"
  android:orientation="horizontal"
  android:layout_height="fill_parent" android:layout_width="fill_parent" android:gravity="center_horizontal">
    <TextView android:layout_height="wrap_content" android:id="@+id/textView3" android:gravity="center" android:layout_width="fill_parent" android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/twitter_configuration" android:textStyle="bold" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></TextView>
    <View android:layout_height="2px" android:layout_width="fill_parent" android:id="@+id/view1" android:background="@color/separator" android:layout_below="@+id/textView3" android:layout_alignParentLeft="true"></View>
    <com.google.ads.AdView ads:adUnitId="MY_AD_UNIT_ID" ads:adSize="IAB_BANNER" ads:loadAdOnCreate="true" android:layout_height="wrap_content" android:id="@+id/adViewTwitter" android:layout_alignParentBottom="true" android:gravity="fill_horizontal" android:layout_centerHorizontal="true" android:layout_width="wrap_content"></com.google.ads.AdView>
    <EditText android:layout_width="fill_parent" android:editable="true" android:layout_height="wrap_content" android:inputType="textMultiLine" android:width="80dp" android:id="@+id/twitterMessage" android:minLines="5" android:layout_above="@+id/LinearLayout1" android:layout_alignParentLeft="true">
        <requestFocus></requestFocus>
    </EditText>
    <View android:layout_width="fill_parent" android:layout_height="2px" android:id="@+id/view2" android:background="@color/separator" android:layout_alignTop="@+id/adViewTwitter" android:layout_alignParentLeft="true"></View>
    <LinearLayout android:layout_width="fill_parent" android:baselineAligned="true" android:layout_height="wrap_content" android:weightSum="1" android:orientation="horizontal" android:id="@+id/LinearLayout1" android:layout_above="@+id/adViewTwitter" android:layout_alignParentLeft="true">
        <TextView android:id="@+id/textView1" android:layout_margin="10dp" android:text="@string/twitter_default_msg" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="center_vertical" android:layout_height="wrap_content"></TextView>
        <Button android:layout_weight="0.38" android:layout_width="60dp" android:id="@+id/twitterConfigurationDoneB" android:text="@string/done_tag" android:layout_gravity="center_vertical|center_horizontal" android:layout_height="wrap_content"></Button>
        <Button android:layout_weight="0.45" android:layout_width="60dp" android:id="@+id/twitterConfigurationClearB" android:text="@string/clear_tag" android:layout_gravity="center_vertical|center_horizontal" android:layout_height="wrap_content"></Button>
    </LinearLayout>
</RelativeLayout>
