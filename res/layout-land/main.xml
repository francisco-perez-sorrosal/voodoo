<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:id="@+id/mainLayout"
	android:background="@color/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" android:gravity="center_horizontal">
    <ListView android:scrollbars="vertical" android:isScrollContainer="true" android:id="@+id/filteredContactsLV" android:scrollbarStyle="insideOverlay" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@+id/textView1"></ListView>
    <View android:layout_width="fill_parent" android:layout_height="2px" android:id="@+id/view1" android:background="#DDFFDD" android:layout_alignBottom="@+id/linearLayout1" android:layout_alignParentLeft="true"></View>
    <LinearLayout android:layout_width="fill_parent" android:baselineAligned="false" android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:layout_margin="5dip" android:layout_below="@+id/linearLayout1" android:layout_alignParentLeft="true">
        <TextView android:gravity="center_horizontal" android:layout_weight="1" android:id="@+id/textView4" android:text="@string/email_enabled" android:layout_width="0dp" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginRight="10dip" android:layout_gravity="center_vertical" android:layout_height="wrap_content" android:textSize="20sp"></TextView>
        <ToggleButton android:text="ToggleButton" android:layout_weight="1" android:layout_width="0dp" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:id="@+id/emailTB"></ToggleButton>
        <TextView android:gravity="center_horizontal" android:layout_weight="1" android:id="@+id/textView3" android:text="@string/twitter_enabled" android:layout_width="0dp" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginRight="10dip" android:layout_gravity="center_vertical" android:layout_height="wrap_content" android:textSize="20sp"></TextView>
        <ToggleButton android:text="ToggleButton" android:layout_weight="1" android:layout_width="0dp" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:id="@+id/twitterTB"></ToggleButton>
    </LinearLayout>
    <View android:layout_width="fill_parent" android:layout_height="2px" android:id="@+id/view2" android:background="#DDFFDD" android:layout_alignTop="@+id/textView1" android:layout_alignParentLeft="true"></View>
    <TextView android:textStyle="bold" android:layout_width="fill_parent" android:id="@+id/textView1" android:text="@string/filtered_contacts" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_below="@+id/linearLayout2" android:layout_alignParentLeft="true" android:layout_marginLeft="5dp"></TextView>
    <com.google.ads.AdView ads:adUnitId="a14e67a128c0a6e" ads:adSize="BANNER" android:gravity="fill_horizontal" android:layout_height="wrap_content" android:id="@+id/adView" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:layout_width="wrap_content"></com.google.ads.AdView>
    <LinearLayout android:baselineAligned="false" android:layout_height="wrap_content" android:weightSum="1" android:id="@+id/linearLayout1" android:layout_below="@+id/adView" android:layout_alignParentLeft="true" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_alignParentRight="true">
        <TextView android:textStyle="bold" android:gravity="center_vertical" android:id="@+id/textView2" android:layout_margin="5dp" android:text="@string/ics_service_enabled" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="center|center_vertical" android:layout_height="fill_parent" android:layout_marginLeft="5dp"></TextView>
        <ToggleButton android:textOn="@string/started" android:text="ToggleButton" android:gravity="center_vertical|center_horizontal" android:textOff="@string/stopped" android:layout_width="75dp" android:layout_height="fill_parent" android:id="@+id/startStopTB"></ToggleButton>
        <CheckBox android:textStyle="italic" android:id="@+id/filterAllCB" android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/filter_all_calls" android:layout_height="wrap_content" android:layout_width="fill_parent"></CheckBox>
    </LinearLayout>
</RelativeLayout>
