<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@color/background"
  android:orientation="vertical"
  android:layout_height="match_parent" android:layout_width="match_parent">
    <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_width="match_parent" android:textStyle="bold" android:layout_gravity="center_vertical" android:gravity="center" android:text="@string/twitter_configuration"></TextView>
    <TableLayout android:id="@+id/tableLayout1" android:layout_height="wrap_content" android:layout_width="match_parent">
        <View android:layout_marginBottom="5dip" android:background="#DDFFDD" android:layout_marginTop="5dip" android:layout_height="2px"></View>
        <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow1" android:layout_width="match_parent">
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textStyle="italic" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Default Twitter Message" android:id="@+id/textView1"></TextView>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/tableRow2">
            <EditText android:inputType="textMultiLine" android:layout_height="wrap_content" android:layout_width="match_parent" android:minLines="5" android:width="80dp" android:id="@+id/twitterMessage">
                <requestFocus></requestFocus>
            </EditText>
        </TableRow>
        <View android:layout_marginBottom="5dip" android:background="#DDFFDD" android:layout_height="2px" android:layout_marginTop="5dip"></View>
    </TableLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/LinearLayout1">
        <Button android:layout_width="wrap_content" android:text="Done" android:layout_height="wrap_content" android:id="@+id/twitterConfigurationDoneB"></Button>
        <Button android:layout_width="wrap_content" android:text="Clear" android:layout_height="wrap_content" android:id="@+id/twitterConfigurationClearB"></Button>
    </LinearLayout>
  
    
</LinearLayout>
