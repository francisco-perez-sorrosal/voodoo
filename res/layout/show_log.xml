		<TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/showLogLayout" android:orientation="vertical">
		</TableLayout>
	</ScrollView>
	<TextView android:textStyle="bold" android:layout_width="fill_parent" android:id="@+id/textLog" android:text="@string/log_label" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_below="@+id/adView" android:layout_alignParentLeft="true"></TextView>
</RelativeLayout>
