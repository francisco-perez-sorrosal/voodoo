<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/background" android:weightSum="1">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
		android:id="@+id/textLog" android:text="@string/log_label" android:textStyle="bold"></TextView>
	<ScrollView android:scrollbarStyle="outsideInset" android:scrollbars="vertical" android:layout_width="fill_parent" android:isScrollContainer="true" android:scrollbarAlwaysDrawVerticalTrack="true" android:layout_height="375dp" android:layout_weight="1.12">
		<HorizontalScrollView android:layout_width="match_parent" android:layout_height="fill_parent">
			<TableLayout android:layout_height="wrap_content" android:id="@+id/showLogLayout" android:layout_width="match_parent" android:orientation="vertical"></TableLayout>
		</HorizontalScrollView>
	</ScrollView>
		
	<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/btnBack"
			android:text="@string/clear_log"></Button>
</LinearLayout>
