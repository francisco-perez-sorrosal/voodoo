<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainLayout"
	android:background="@color/background"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:id="@+id/textView2" android:textStyle="bold" android:layout_gravity="center" android:layout_width="wrap_content" android:text="@string/ics_service_enabled"></TextView>
    <ToggleButton android:text="ToggleButton" android:layout_height="wrap_content" android:id="@+id/startStopTB" android:layout_width="match_parent" android:textOn="@string/started" android:textOff="@string/stopped"></ToggleButton>
    <CheckBox android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/filter_all_calls" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/filterAllCB" android:textStyle="italic"></CheckBox>
    <View android:layout_height="2px" android:layout_marginTop="5dip" android:layout_marginBottom="5dip" android:background="#DDFFDD" android:layout_width="match_parent"></View>
    <LinearLayout android:baselineAligned="false" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/linearLayout1">
        <TextView android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_gravity="center_vertical" android:layout_weight="1" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/email_enabled" android:textStyle="italic"></TextView>
        <ToggleButton android:layout_height="wrap_content" android:id="@+id/emailTB" android:layout_weight="1" android:layout_width="wrap_content" android:text="ToggleButton"></ToggleButton>
        <TextView android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_gravity="center_vertical" android:layout_weight="1" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/twitter_enabled" android:textStyle="italic"></TextView>
        <ToggleButton android:layout_height="wrap_content" android:id="@+id/twitterTB" android:layout_weight="1" android:layout_width="wrap_content" android:text="ToggleButton"></ToggleButton>
    </LinearLayout>
    <View android:layout_marginBottom="5dip" android:layout_height="2px" android:layout_marginTop="5dip" android:layout_width="match_parent" android:background="#DDFFDD"></View>
    <TextView android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_width="match_parent" android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/filtered_contacts" android:textStyle="bold|italic"></TextView>
    <HorizontalScrollView android:layout_height="fill_parent" android:layout_width="match_parent">
        <ListView android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:isScrollContainer="true" android:id="@+id/filteredContactsLV" android:scrollbarStyle="insideOverlay"></ListView>
    </HorizontalScrollView>
</LinearLayout>
